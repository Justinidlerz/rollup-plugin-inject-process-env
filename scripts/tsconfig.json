{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "diagnostics": true,
        "downlevelIteration": false,
        "lib": ["es5", "es6", "dom"],
        "types": ["node", "jest"],
        "typeRoots": [ "@types" ],
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "skipLibCheck": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "target": "es5",
        "declaration": true
    },
    "include": [
        "."
    ],
}
