{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "diagnostics": true,
        "downlevelIteration": false,
        "lib": ["es5", "es6", "dom"],
        "outDir": "build",
        "types": ["node", "jest"],
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "skipLibCheck": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "target": "es5",
        "declaration": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "scripts",
        "node_modules"
    ]
}
